{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/cc",
            "args": [
                "-Werror",
                "-Wextra",
                "-Wall",
                "-g",
                "test_split.c",
                "ft_split.c",
                "ft_calloc.c",
                "ft_strlen.c",
                "ft_bzero.c",
                "ft_substr.c",
                "ft_strtrim.c",
                "ft_strdup.c",
                "ft_memset.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
